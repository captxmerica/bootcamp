<% include ../partials/header %>


<div class"container">
<header class="jumbotron text-center"><h1><span class="glyphicon glyphicon-tent"></span>  Welcome To YelpCamp!</h1>
<p>View hand-picked campgrounds from all over the world</p>
<p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a></p>
</header>

<div class="row">
    <div class="col-lg-12">
        <h3>Most Popular Campgrounds</h3>
    </div>
</div>

<div class="row text-center" style="display:flex; flex-wrap: wrap;">
     <div class="col-md-12">
        <% if(noMatch != undefined){%>
        <h3><%=noMatch%></h3>
        <p>
    <form action="/campgrounds" method="GET" class="form-inline">
        <div class="form-group">
            <input type="text" name="search" placeholder="Campground Search" class="form-control">
            <input type="submit" value="search" class="btn btn-success">
        </div>
    </form>
</p>
        <% }%>
    </div>
    <% campgrounds.forEach(function(campground){ %>
    <div class="col-md-3 col-sm-6 smart">
        <div class="thumbnail">
            <img class="img-fluid img-thumbnail" src="<%= campground.img%>">
    <div class="caption">
        <h4><%= campground.name %></h4>
            </div>
            <p>
                <a href="/campgrounds/<%= campground._id%>"   class="btn btn-primary">More Info</a>
            </p>
        </div>
    </div>

    <% }); %>
</div>


</div>
<% include ../partials/footer %>
