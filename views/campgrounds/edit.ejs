<% include ../partials/header %>


<div class="container">   
<div class="row">
    <h1 style="text-align:center">Edit <%= campground.name%></h1>
    <div style="width: 40%; margin:30px auto;">
<form action="/campgrounds/<%=campground._id%>/?_method=PUT" method="POST">
    <div class="form-group">
            <label>Campground Name</label>
    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name%>">
   </div>
     <div class="form-group">
            <label>Price</label>
    <input class="form-control" type="number" name="campground[price]" value="<%= campground.price%>" min="0.01" step="0.01">
   </div>
     <div class="form-group">
            <label>Image Link</label>
    <input class="form-control" type="text" name="campground[img]" value="<%= campground.img%>">
       </div>
            <div class="form-group">
    <!--<input class="form-control" type="text" name="desc" value="">-->
        <label>Description</label>
    <textarea class="form-control" rows="9" name="campground[desc]"><%= campground.desc%></textarea>
       </div>
     <div class="form-group box">
    <button class="btn btn-lg btn-primary btn-block">Submit</button>
       </div>
</form>
</div>
</div>
</div>
<% include ../partials/footer %>

